<%
// 공지사항 리스트
	DataMap listMap = (DataMap)request.getAttribute("EAT_LIST");
	listMap.setNullToInitialize(true);
	
	StringBuffer eatTitleHtml = new StringBuffer();
	StringBuffer eatHeaderHtml = new StringBuffer();
	StringBuffer eatContentsHtml = new StringBuffer();
	
	
	eatTitleHtml.append(listMap.getString("fyear", 0)+"년 "+listMap.getString("fmonth", 0)+"월 "+String.valueOf(listMap.getInt("week_order", 0))+"째주 식단표");

	eatHeaderHtml.append("<th class=\"bl0\">"+listMap.getString("fmonth", 0)+"."+listMap.getString("fdate", 0)+" (월)</th>");
	eatHeaderHtml.append("<th>"+listMap.getString("fmonth", 1)+"."+listMap.getString("fdate", 1)+" (화)</th>");
	eatHeaderHtml.append("<th>"+listMap.getString("fmonth", 2)+"."+listMap.getString("fdate", 2)+" (수)</th>");
	eatHeaderHtml.append("<th>"+listMap.getString("fmonth", 3)+"."+listMap.getString("fdate", 3)+" (목)</th>");
	eatHeaderHtml.append("<th>"+listMap.getString("fmonth", 4)+"."+listMap.getString("fdate", 4)+" (금)</th>");

	eatContentsHtml.append("<td>"+listMap.getString("content", 0)+"</td>");
	eatContentsHtml.append("<td>"+listMap.getString("content", 1)+"</td>");
	eatContentsHtml.append("<td>"+listMap.getString("content", 2)+"</td>");
	eatContentsHtml.append("<td>"+listMap.getString("content", 3)+"</td>");
	eatContentsHtml.append("<td>"+listMap.getString("content", 4)+"</td>");

	
%>

