	<logger name="org.springframework">
		<level value="debug" />
        <appender-ref ref="dailyout" />
        <appender-ref ref="console" />
	</logger>
	
	<logger name="loti">
		<level value="debug" />
        <appender-ref ref="dailyout" />
        <appender-ref ref="console" />
	</logger>

	<logger name="ut">
		<level value="debug" />
        <appender-ref ref="dailyout" />
        <appender-ref ref="console" />
	</logger>
	
	<logger name="java.sql.*">
		<level value="debug" />
        <appender-ref ref="dailyout" />
        <appender-ref ref="console" />
	</logger>
	
	<logger name="org.apache.ibatis.*">
		<level value="debug" />
        <appender-ref ref="dailyout" />
        <appender-ref ref="console" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="warn" />
